<h1 class="h1Style">Eat Da Burger</h1>

    <h2 class="h2Style">BURGERS TO BE DEVOURED</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>


   <h2 class="h2Style">DEVOURED BURGERS</h2> 

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>


<h2 class="h2Style">Add a burger</h2>
<form id="create-form">

  <div class="form-group formStyle">
    <label for="bu">What kind?</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group formStyle">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="devoured" value="true" id="devoured" checked>It's been eaten!<br>
    <input type="radio" name="devoured" value="false" id="needtoeat"> It's available for consumption
  </div>

  <button class="myButton" type="submit">ADD BURGER!</button>
</form>